{
    "battery": {
        "spacing": 8,
        "bat": "BAT0",
        "interval": 30,
        "states": {
            "warning": 30,
            "critical": 15
        },
        "format": "{capacity}% {icon}",
        "format-icons": ["ÔâÑ ", "ÔâÉ ", "ÔâÇ ", "ÔâÅ ", "ÔâÄ "],
        "max-length": 25
    },

    "clock": {
        "spacing": 8,
        "format": "{:%H:%M} ÔÅ≥ ",
        "format-alt": "{:L%A, %B %d, %Y (%R)}ÔÅ≥ ",
        "tooltip-format": "\n<span size='9pt' font='WenQuanYi Zen Hei Mono'>{calendar}</span>",
        "calendar": {
                    "mode"          : "year",
                    "mode-mon-col"  : 3,
                    "weeks-pos"     : "right",
                    "on-scroll"     : 1,
                    "format": {
                              "months":     "<span color='#ffead3'><b>{}</b></span>",
                              "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                              "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                              "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                              "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                              }
        },
        "actions":  {
                    "on-click-right": "mode",
                    "on-click-forward": "tz_up",
                    "on-click-backward": "tz_down",
                    "on-scroll-up": "shift_up",
                    "on-scroll-down": "shift_down"
        }
    },

    "group/bat_clock": {
        "orientation": "horizontal",
        "modules": [
            "battery",
            "clock",
        ],
    },

    "cpu": {
        "interval": 10,
        "format": "{}% Ôãõ  ",
        "max-length": 10
    },

    "memory": {
        "interval": 10,
        "format": "{used:0.1f}G/{total:0.1f}G ÔÉâ  "
    },

    "disk": {
      "interval": 30,
      "path": "/home",
      "format": "üñ¥ {specific_free:0.2f}GB ",
      "format-alt": "{specific_free:0.2f} GB out of {specific_total:0.2f} GB available ",
      "unit": "GB"
    },

    "temperature": {
        "format": "{temperatureC}¬∞C Ôãâ"
    },

    "custom/hardware-wrap": {
        	"format": "Ôãõ ÔÉâ  üñ¥ ",
        	"tooltip-format": "Hardware group"
    },

    "group/hardware": {
        "orientation": "horizontal",

        "drawer": {
		        "transition-duration": 500,
		        "transition-right-to-left": true,
	      },

        "modules": [
            "custom/hardware-wrap",
            "cpu",
            "memory",
            "disk",
            "temperature",
        ],
    },

    
    "custom/media": {
        "format": "{icon}{text}",
        "return-type": "json",
        "format-icons": {
            "Playing": "ÔÅã ",
            "Paused": "ÔÅå ",
