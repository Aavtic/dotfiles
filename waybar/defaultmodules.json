    "custom/window-wrap": {
        	"format": "Window",
        	"tooltip-format": "window group"
    },

    "group/windows": {
        "orientation": "horizontal",

        "drawer": {
		        "transition-duration": 500,
		        "transition-right-to-left": true,
	      },

        "modules": [
